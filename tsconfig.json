{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "output/npm",
    "strictNullChecks": true,
    "experimentalDecorators": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "webworker",
      "es2020",
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
